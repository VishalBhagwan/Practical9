
@{
    ViewBag.Title = "Insert";
}

<h2>Insert</h2>
@using (Html.BeginForm("DoInsert", "Home", FormMethod.Post))
{
    <label>Name</label>
    <br />
    @Html.TextBox("name", null, new { @class = "form-control", @type = "text" });
    <label>Club Name</label>
    <br />
    @Html.TextBox("clubname", null, new { @class = "form-control", @type = "text" });
    <label>Age</label>
    <br />
    @Html.TextBox("age", null, new { @class = "form-control", @type = "number" });
    <label>Fee</label>
    <br />
    @Html.TextBox("fee", null, new { @class = "form-control", @type = "number", @step = "0.01" });
    <button type="submit">Add</button>
}
